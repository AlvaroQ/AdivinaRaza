<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.result.ResultFragment">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calification"
        app:fontFamily="@font/cutout"
        android:textAppearance="@style/Regular.TextColor.ToolbatTitle"
        android:gravity="center"
        android:layout_marginTop="@dimen/height_status_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textPoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="0"
        android:textAppearance="@style/Regular.TextColor.VeryVeryLarge"
        app:fontFamily="@font/cutout"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/textTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyle"
        android:numStars="5"
        android:stepSize="1"
        tools:rating="2"
        android:isIndicator="true"
        app:layout_constraintTop_toBottomOf="@+id/textTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDiploma"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_top_calification"
        android:background="@drawable/diploma_marco"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <ImageView
            android:id="@+id/imageUniversity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.25"
            android:layout_marginTop="25dp"
            android:src="@drawable/diploma_university"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/imagen_de_universidad_canina" />

        <TextView
            android:id="@+id/textDiploma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nota_result_text_fail"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginStart="@dimen/margin_text_result"
            android:layout_marginEnd="@dimen/margin_text_result"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <ImageView
            android:id="@+id/imageResult"
            android:layout_width="80dp"
            android:layout_height="60dp"
            tools:src="@drawable/diploma_fail"
            android:layout_marginTop="@dimen/margin_button_stamp"
            android:layout_marginEnd="@dimen/margin_button_stamp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/stamp_result"  />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@drawable/button_start"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/otherAppText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/other_apps"
        android:textAppearance="@style/Regular.TextColor.VeryVeryLarge"
        app:fontFamily="@font/cutout"
        app:layout_constraintBottom_toTopOf="@+id/recyclerviewOtherApps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewOtherApps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_app" />


    <ImageView
        android:id="@+id/imagenLoading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:src="@drawable/animated_dog"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/otherAppText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/loading_image" />

</androidx.constraintlayout.widget.ConstraintLayout>